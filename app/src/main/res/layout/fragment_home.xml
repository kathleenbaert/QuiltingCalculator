<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quilt Dimensions:"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/DimensionsWidth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:inputType="number"
                        android:hint="width" />


                    <EditText
                        android:id="@+id/DimensionsHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:inputType="number"
                        android:hint="height" />

                    <Button
                        android:id="@+id/calculateDimensions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Calculate" />

                </LinearLayout>

                <TextView
                    android:id="@+id/calculatedDimensions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calculated Dimensions: " />

                <TextView
                    android:id="@+id/QuiltConstruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quilt Construction:"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Piecing:"
                    android:gravity="right" />

                <Spinner
                    android:id="@+id/QuiltConstructionPiecingSpinner"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"/>

                <EditText
                    android:id="@+id/QuiltConstructionPiecingInches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="sq in" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Machine Applique:"
                        android:gravity="right" />

                    <Spinner
                        android:id="@+id/QuiltConstructionMachineAppliqueSpinner"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/QuiltConstructionMachineAppliqueInches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="sq in" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Hand Applique:"
                        android:gravity="right" />

                    <Spinner
                        android:id="@+id/QuiltConstructionHandAppliqueSpinner"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/QuiltConstructionHandAppliqueInches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="sq in" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Borders:" />


                    <EditText
                        android:id="@+id/BorderInches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="sq in"
                        android:gravity="right"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/Quilting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quilting:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkBox_EdgeToEdge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edge To Edge Design" />

                <CheckBox
                    android:id="@+id/checkBox_Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Digital Design" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Design Change:" />

                    <EditText
                        android:id="@+id/QuiltingDesignChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="sq in"
                        android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Custom Borders:" />

                    <EditText
                        android:id="@+id/QuiltingCustomBorders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="sq in"
                        android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Bobbins:" />

                    <EditText
                        android:id="@+id/QuiltingBobbins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="sq in"
                        android:inputType="number" />

                </LinearLayout>

                <TextView
                    android:id="@+id/finishingTouches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Finishing Touches:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/finishingTouches_CreateBinding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Bidning" />
                <CheckBox
                    android:id="@+id/finishingTouches_BindingAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Binding Attachment" />
                <CheckBox
                    android:id="@+id/finishingTouches_MiteredCorners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mitered Corners" />
                <CheckBox
                    android:id="@+id/finishingTouches_BindingMachineFinished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Binding: Machine Finished" />
                <CheckBox
                    android:id="@+id/finishingTouches_BindingHandFinished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Binding: Hand Finished" />
                <CheckBox
                    android:id="@+id/finishingTouches_Pressing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pressing" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>